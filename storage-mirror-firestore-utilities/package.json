{
  "name": "storage-mirror-firestore-utilities",
  "scripts": {
    "start": "ts-node --transpile-only bin/driver.ts",
    "local": "ts-node bin/driver.ts --test",
    "build": "npm run clean && tsc -b && npm run clean-lib",
    "clean": "rimraf lib && cd functions && rimraf lib",
    "clean-lib": "mv lib/bin/driver.js lib/driver.js && rimraf lib/functions && rimraf lib/bin",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "deploy": "npm run build && firebase deploy --only functions",
    "emulator": "firebase emulators:start",
    "logs": "firebase functions:log"
  },
  "main": "lib/driver.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "@google-cloud/functions": "^1.0.1",
    "@types/inquirer": "^6.5.0",
    "await-semaphore": "^0.1.3",
    "commander": "^6.0.0",
    "faker": "^5.5.3",
    "firebase-admin": "^9.11.0",
    "firebase-functions": "^3.7.0",
    "google-auth-library": "^6.0.6",
    "inquirer": "^7.3.3",
    "lodash": "^4.17.20",
    "ora": "^4.0.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/faker": "^4.1.12",
    "@types/lodash": "^4.14.159",
    "@types/node": "^14.6.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7"
  },
  "private": true
}
