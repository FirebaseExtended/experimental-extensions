{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2020",
    "module": "commonjs",
    "noImplicitReturns": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node", "jest", "@types/jest"],
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],
    "typeRoots": ["./node_modules/@types"]
  },
  "compileOnSave": true,
  "include": ["src"]
}
